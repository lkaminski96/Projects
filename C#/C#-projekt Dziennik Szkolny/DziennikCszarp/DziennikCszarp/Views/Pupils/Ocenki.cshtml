@model IEnumerable<DziennikCszarp.Models.Oceny>
@{
    ViewBag.Title = "Ocenki";
    Layout = "~/Views/Shared/_LayoutN.cshtml";
}
@if (Model.Count() < 1)
{
    <br />
    <h3 style="float: left; width: 94%;">Brak zarejestrowanych ocen dla uczniów.</h3>
    <button class="btn btn-dark" type="submit" style="float: left;"> @Html.ActionLink("Dodaj Ocenę", "AddGrade", "Pupils", null, new { style = "color: white;" }) </button>
}
else
{
    <br />
    <h2 style="float: left; width: 94%;">Oceny</h2>
    <button class="btn btn-dark" type="submit" style="float: left;"> @Html.ActionLink("Dodaj Ocenę", "AddGrade", "Pupils", null, new { style = "color: white;" }) </button>
    <table class="table  table-striped table-sm table-idx" style="border: 3px solid #000000 !important;">
        <thead style="border: 3px solid #000000 !important;">
        <tr class="table-dark" style="border: 3px solid #000000 !important;">
            <th scope="col" style="border: 3px solid #000000 !important;">Nr</th>
            <th scope="col" style="border: 3px solid #000000 !important;">Imię</th>
            <th scope="col" style="border: 3px solid #000000 !important;">Nazwisko</th>
            <th scope="col" style="border: 3px solid #000000 !important;">Ocena</th>
            <th scope="col" style="border: 3px solid #000000 !important;">Typ</th>
            <th scope="col" style="border: 3px solid #000000 !important;">Akcja</th>
        </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr style="border: 3px solid #000000 !important;">
                <td style="border: 3px solid #000000 !important;">@item.NrWDzienniku</td>
                <td style="border: 3px solid #000000 !important;">@item.Imie</td>
                <td style="border: 3px solid #000000 !important;">@item.Nazwisko</td>
                <td style="border: 3px solid #000000 !important;">@item.Ocena</td>
                <td style="border: 3px solid #000000 !important;">@item.Typ</td>
                <td style="border: 3px solid #000000 !important;">
                    <a href="@Url.Action("EditGrade", "Pupils", new {@id=@item.IDOceny })" class="table-link">Edytuj</a>
                    <a href="@Url.Action("DelGrade", "Pupils", new {@id=@item.IDOceny })" class="table-link" onclick="return confirm('Czy jesteś pewny, że chcesz usunąć ten rekord?');">Usuń</a>
                </td>
            </tr>
        }
    </table>
}

