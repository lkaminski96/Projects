@model DziennikCszarp.Models.Oceny
@{
    ViewBag.Title = "AddGrade";
    Layout = "~/Views/Shared/_LayoutN.cshtml";
}
@using (Html.BeginForm("AddGrade", "Pupils"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.IDOceny)
    <div class="jumbotron" style="width: 50%; margin: auto;">
        <h1 class="display-3">Dodaj Ocenę</h1>
        <div class="form-group">
            @Html.LabelFor(model => model.FullName, new { @class = "control-label col-sm-2", style = "font-size: 15px" })
            <div class="col-sm-10">
                @Html.DropDownListFor(model => model.IDUcznia, Model.FullName, "Wybierz Ucznia",
                    new {
                        @class = "form-control",
                        size = "1",
                        style = "width: 300px",
                        required = "required"
                    })
                @Html.ValidationMessageFor(model => model.FullName, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Ocena, new { @class = "control-label col-sm-2", style = "font-size: 15px" })
            <div class="col-sm-10">
                @Html.DropDownListFor(model => model.Ocena, Model.Grades, "Wybierz Ocenę",
                    new {
                        @class = "form-control",
                        size = "1",
                        style = "width: 300px",
                        required = "required"
                    })
                @Html.ValidationMessageFor(model => model.Ocena, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Typ, new { @class = "control-label col-sm-2", style = "font-size: 15px" })
            <div class="col-sm-10">
                @Html.DropDownListFor(model => model.Typ, Model.Types, "Wybierz Typ",
                    new {
                        @class = "form-control",
                        size = "1",
                        style = "width: 300px",
                        required = "required"
                    })
                @Html.ValidationMessageFor(model => model.Typ, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-8">
                <input type="submit" value="Zatwierdź zmiany" class="btn btn-success btn-lg" />
                <a href="@Url.Action("Ocenki", "Pupils")" class="btn btn-danger btn-lg">Anuluj</a>
            </div>
        </div>

    </div>
}

