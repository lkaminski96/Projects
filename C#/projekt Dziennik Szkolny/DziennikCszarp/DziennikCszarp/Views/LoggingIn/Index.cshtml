
@Styles.Render("~/Content/css")
@using System.Activities.Expressions
@using System.Web.UI.HtmlControls
@using DziennikCszarp.Models
@model DziennikCszarp.ViewModels.AccountViewModel

@{
    Layout = null;
    ViewBag.Title = "Logowanie";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body style="background: gainsboro">
    @using (Html.BeginForm("Login", "LoggingIn"))
    {
        <div class="jumbotron" style="width: 50%; margin: auto;" >
            <h1 class="display-3">Projekt <br />Dziennik Szkolny</h1>
                <form role="form">
                    <fieldset>
                        <div>
                            @Html.LabelFor(model => model.account.Username)
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.account.Username,
                                new
                                {
                                    @class = "form-control" 
                                })
                            @Html.ValidationMessageFor(model => model.account.Username, null, 
                          new
                            {
                                @style = "color: red;" 
                            })
                        </div>
                        <div>
                            @Html.LabelFor(model => model.account.Password)
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(model => model.account.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.account.Password, null,
                                new
                                {
                                    @style = "color: red;" 
                                })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.account.kto)
                            @Html.DropDownListFor(model => model.account.kto, new SelectList(Enum.GetValues(typeof(Person))), "Wybierz Logującego",
                                new
                                {
                                    required = "required" 
                                })
                        </div>
                        <input type="submit" value="Zaloguj" class="btn btn-dark " />
                        <div style="color: red; font-weight: 700;">@ViewBag.Error</div>
                    </fieldset>
                </form>
        </div>
    }
</body>
</html>

